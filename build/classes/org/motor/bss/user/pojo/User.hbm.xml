<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.motor.bss.user.pojo.User" table="M_USER">
        <id name="userId" type="java.lang.String">
            <column name="USERID" length="36" not-null="true" />
            <generator class="assigned"></generator>
        </id>
        <property name="password" type="java.lang.String">
            <column name="PASSWORD" length="36" not-null="true" />
        </property>
        <property name="userName" type="java.lang.String">
            <column name="USERNAME" length="36" />
        </property>
        <property name="organId" type="java.lang.String">
            <column name="ORGANID" length="36" />
        </property>
        <property name="job" type="java.lang.String">
            <column name="JOB" length="36"/>
        </property>
        <property name="gender" type="java.lang.String">
            <column name="GENDER" length="1" scale="0" not-null="true" />
        </property>
        <property name="birthday" type="java.lang.String">
            <column name="BIRTHDAY" length="20" not-null="true" />
        </property>
        <property name="mobile" type="java.lang.String">
            <column name="MOBILE" length="11" not-null="true" />
        </property>
        <property name="tel" type="java.lang.String">
            <column name="TEL" length="13" />
        </property>
        <property name="qq" type="java.lang.String">
            <column name="QQ" length="14" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="EMAIL" length="36" />
        </property>
        <property name="addr" type="java.lang.String">
            <column name="ADDR" length="100" />
        </property>
        <property name="party" type="java.lang.String">
            <column name="PARTY" length="4"/>
        </property>
        <property name="hiredate" type="java.lang.String">
            <column name="HIREDATE" length="20"/>
        </property>
        <property name="idCard" type="java.lang.String">
            <column name="IDCARD" length="18"/>
        </property>
    </class>
</hibernate-mapping>
